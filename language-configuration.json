{
    "comments": {
        "lineComment": ".."
    },
    "brackets": [
        [
            "<",
            ">"
        ],
        [
            "[",
            "]"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "<",
            "close": ">"
        }
    ],
    "surroundingPairs": [
        [
            "*",
            "*"
        ],
        [
            "|",
            "|"
        ],
        [
            "`",
            "`"
        ],
        [
            ":",
            ":"
        ],
        [
            "<",
            ">"
        ]
    ],
    "folding": {
        "offSide": true
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\.{2}\\s\\w+:{2}(\\s\\w+)?$",
        "decreaseIndentPattern": "^\\n$"
    }
}