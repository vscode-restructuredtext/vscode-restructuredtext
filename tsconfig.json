{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "out",
		"lib": ["es6"],
		"rootDir": "src",
		"sourceMap": true,
		"importHelpers": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": false,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}